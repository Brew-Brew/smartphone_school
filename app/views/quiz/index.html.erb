
  <div class="row">   
     
      <% @subjects.each do |s|%>  
      
      <div class="col-md-4" id="quiz_main" style="margin:0px;">
          <% if (s.name.include? '주요 버튼 및 기능') %>
           <div class="card1" style="border-radius: 20px; width: 30rem; position:relative; left:90px; top:100px;box-shadow:2px 2px 4px 2px #999;">
          <% elsif (s.name.include? '전화/메시지') %>
          <div class="card2" style="width: 30rem; position:relative; left:308px; top:-347px; box-shadow:2px 2px 4px 2px #999; border-radius: 20px;">
          <% elsif (s.name.include? '카메라') %>
          <div class="card3" style="width: 30rem; position:relative; left:308px; top:-347px; box-shadow:2px 2px 4px 2px #999; border-radius: 20px;">
          <% elsif (s.name.include? '환경설정') %>
          <div class="card4" style="width: 30rem; position:relative; left:-663px; top:40px;  box-shadow:2px 2px 4px 2px #999; border-radius: 20px;">
