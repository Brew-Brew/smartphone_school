 
 <div class="row">        
    <% @subjects.each do |s|%>   
    <div class="col-md-4" id="quiz_main">
      <div class="card" style="width:100%;  height: 30rem;box-shadow:2px 2px 4px 2px #999; border-radius: 20px;">
       <div class="card-block" style="background-color: #83c9b0; padding:1rem; height:18rem">
        <% if (s.name.include? '주요 버튼 및 기능') %>
              <img class="card-img-top" src="/assets/click.png" alt="Card image cap" style=" padding-top: 3rem;">
        <% elsif (s.name.include? '전화/메시지') %>
              <img class="card-img-top" src="/assets/call.png" alt="Card image cap" style=" padding-top: 3rem;">
        <% elsif (s.name.include? '카메라') %>
              <img class="card-img-top" src="/assets/cam.png" alt="Card image cap" style=" padding-top: 3rem;">
        <% elsif (s.name.include? '환경설정') %>
              <img class="card-img-top" src="/assets/setting.png" alt="Card image cap" style=" padding-top: 3rem;">
        <% elsif (s.name.include? '마켓/어플') %>
              <img class="card-img-top" src="/assets/market.png" alt="Card image cap" style=" padding-top: 3rem;">
        <% elsif (s.name.include? 'SNS') %>
              <img class="card-img-top" src="/assets/message2.png" alt="Card image cap" style=" padding-top: 3rem;">
        <% end %>
         </div>
        <div class="card-block">
          <h4 class="card-title"><%= s.name %></h4>
          <p class="card-text">배워봅시다!</p>
          
        </div>
        
        <div class="card-block">
          <a href="/quiz/<%= s.id %>" class="card-link">학습하기</a>
         
        </div>
    <div class="card-block">         
        <div class="progress" style="width: 20rem">
          <div class="progress-bar" role="progressbar" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: <%=s.score%>%;background-color: #83c9b0;">
           <%=s.score %>%
          </div>
        </div>
      </div>
    </div>
      </div>

    
     <% end %>
     
 </div>
 
  
  
   
   
   
