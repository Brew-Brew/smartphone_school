
<div class="row">        
    <% @subjects.each do |s|%>   
    <div class="col-md-4" id="quiz_main">
      <div class="card" style="width: 20rem;">
        <img class="card-img-top" src="https://image.flaticon.com/icons/svg/138/138979.svg" alt="Card image cap">
        <div class="card-block">
          <h4 class="card-title"><%= s.name %></h4>
          <p class="card-text">배워봅시다!</p>
          
        </div>
        
        <div class="card-block">
          <a href="/quiz/<%= s.id %>" class="card-link">학습하기</a>
         
        </div>
      </div>
<div class="progress" style="width: 20rem">
  <div class="progress-bar" role="progressbar" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: <%=s.score%>%;">
   <%=s.score %>%
  </div>
</div>
    </div>
    
     <% end %>
     
 </div>