<% if controller.controller_name == 'quiz' && controller.action_name == 'index' %>
  <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src="/assets/new-main.png" alt="Los Angeles" style="width: 100vw; height: 300px; object-fit: cover;">
      </div>
      <div class="item">
        <img src="/assets/slide_01.jpg" alt="Chicago"  style="width: 100vw; height: 300px; object-fit: cover;">
      </div>
      <div class="item">
        <img src="/assets/slide_02.jpg" alt="New York"  style="width: 100vw; height: 300px; object-fit: cover;">
      </div>
    </div>
